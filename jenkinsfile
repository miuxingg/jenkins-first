pipeline{
    agent any
    triggers {
        pollSCM('*/3 * * * *') 
    }
    stages{
        stage("Job-1"){
            steps{
                echo "========executing Job-1========"
            }
            
        }
        stage("Job-2"){
            steps{
               sh 'node main.js'
            }
            
        }
        stage("Job-3"){
            steps{
                echo "========executing Job-3========"
            }
            
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}