pipeline{
    agent any
    triggers {
        pollSCM('*/3 * * * *') 
    }
    stages{
        stage("Build docker image"){
            steps{
                sh 'docker build -t jenkis-nest .'
            }
            
        }
        stage('Push docker image to Docker Hub'){
            steps{
                sh 'docker login --username=miuxing2k@gmail.com --password=ThanhBinh2k'
                sh 'docker push miuxing2k/jenkins-test:jenkis-nest'
            }
        }
        stage('Remove docker image'){
            steps{
                sh 'docker rmi jenkis-nest'
            }
        }
        stage('Pull docker image from Docker Hub'){
            steps{
                sh 'docker pull miuxing2k/jenkins-test:jenkis-nest'
            }
            
        }
        stage('Run docker image'){
            steps{
                sh 'docker run -p 7000:7000 miuxing2k/jenkins-test:jenkis-nest'
            }
        }
        // stage("Run docker image"){
        //     steps{
        //        sh 'docker run -p 7000:7000 jenkis-nest'
        //     }
            
        // }
        
    }
    post{
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
